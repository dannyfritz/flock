{
  "name": "bitmask",
  "version": "0.1.0",
  "author": "Danny Fritz <me@dannyfritz.com>",
  "license": "MIT",
  "description": "BitMask Functions",
  "files": [
    "dist/*"
  ],
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "pnpm run clean && pnpm run build:microbundle",
    "build:microbundle": "microbundle --tsconfig tsconfig-build.json --target node --format esm,cjs",
    "clean": "rimraf ./dist",
    "format": "prettier --write .",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc",
    "test": "mocha"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "chai": "^4.3.6",
    "eslint-config-base": "workspace:^",
    "microbundle": "^0.14.2",
    "mocha": "^9.2.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-config": "workspace:^",
    "ts-node": "^10.5.0",
    "type-fest": "^2.12.0",
    "typescript": "^4.4.4"
  }
}
